<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <!-- 데코레이터 -->
  <bean id="userService" class="com.nahoonzzang.tobyspring.UserServiceTx">
    <property name="transactionManager" ref="transactionManager"/>
    <property name="userService" ref="userServiceImpl"/> <!--DI를 통해 타깃(userServiceImpl)을 다이내믹하게 주입한다. -->
  </bean>

  <!--타깃-->
  <bean id="userServiceImpl" class="com.nahoonzzang.tobyspring.UserServiceImpl">
    <property name="userDao" ref="userDao"/>
    <property name="mailSender" ref="mailSender"/>
  </bean>

  <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
    <property name="dataSource" ref="dataSource"/>
  </bean>

  <bean id="userDao" class="com.nahoonzzang.tobyspring.UserDaoJdbc">
    <property name="dataSource" ref="dataSource"/> <!-- Bean 만들어 줘야 함 -->
  </bean>

  <bean id="mailSender" class="com.nahoonzzang.tobyspring.DummyMailSender">
  </bean>

  <bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
    <property name="driverClass" value="com.mysql.jdbc.Driver"/>
    <property name="url" value="jdbc:mysql://localhost/testdb"/>
    <property name="username" value="root"/>
    <property name="password" value="a10234"/>
  </bean>
</beans>